@page "/runstatistics"
@rendermode InteractiveServer
@using StatisticalTools;
@attribute [StreamRendering(true)]
@namespace FinancialPlanner.Components.AppComponents

<small>
    <table class="table table-condensed table-borderless">
    <thead>
        <tr>
            <th>Statistics</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <small>
                    <p role="status">Total Scenario Runs: @histogramBucket.NumberOfElements</p>
                    <p role="status">Zero Account Balance Age Min: @histogramBucket.Min</p>
                    <p role="status">Zero Account Balance Age Mean:@histogramBucket.Mean</p>
                    <p role="status">Zero Account Balance Age Median: @histogramBucket.Median</p>
                    <p role="status">Zero Account Balance Age Max: @histogramBucket.Max</p>
                    <p role="status"> Minus 1 Sigma Value ~ 84% : @histogramBucket.MinusOneSigma</p>
                </small>
            </td>
        </tr>
    </tbody>
</table>
</small>

@code {
    [Parameter]
    public HistogramBucket histogramBucket { get; set; }

    protected override async Task OnInitializedAsync()
    {

    }

}
