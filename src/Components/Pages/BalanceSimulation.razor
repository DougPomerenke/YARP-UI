                       @oninput="@((args) => MonthlyRetirementIncome = Convert.ToInt32( args.Value))" />
                <p>@MonthlyRetirementIncome</p>
            </td>

            <td style="width: 25%;">
                <p>Social Security Payout Age :</p>
